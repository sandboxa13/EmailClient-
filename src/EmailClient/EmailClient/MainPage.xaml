<UserControl
    x:Class="EmailClient.MainPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:EmailClient.ViewModels;assembly=EmailClient"
    xmlns:views="clr-namespace:EmailClient"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ListBox
        Grid.Row="0"
        Grid.Column="0"
        Items="{Binding PhotoCollection}"
        SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
        <ListBox.DataTemplates>
            <DataTemplate DataType="{x:Type viewModels:MessageViewModel}">
                <StackPanel Margin="25,5" Orientation="Vertical">
                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        Foreground="#777777"
                        Text="{Binding From}" />

                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        FontSize="15"
                        Foreground="#777777"
                        Text="{Binding Snippet}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.DataTemplates>
    </ListBox>

</UserControl>
